      "default": 0
    },
    "love": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "share": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "report": {
      "type": "number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
